{cover_enabled, true}.
{edoc_opts, [{dir, "doc"}]}.
{eunit_opts, [{report, {eunit_surefire, [{dir,"."}]}}]}.
{erl_opts, [{parse_transform, lager_transform}, debug_info, warnings_as_errors]}.
{deps,
 [
  lager,
  poolboy,
  base16,
  {erlcloud, ".*", {git, "https://github.com/erlcloud/erlcloud.git", {tag, "0.13.0"}}}
  %{erlcloud, ".*", {git, "https://github.com/project-fifo/erlcloud", {tag, "0.8.6"}}}
 ]}.

{profiles,
 [
  {lint,  [{plugins, [{rebar3_lint, {git, "https://github.com/project-fifo/rebar3_lint.git", {tag, "0.1.4"}}}]}]}
 ]}.

{escript_incl_apps, [erlcloud, goldrush, jsx, lager, poolboy, base16, fifo_s3]}.
{escript_emu_args, "%%! +K true +P 10000 -env ERL_MAX_PORTS 10000\n"}.
