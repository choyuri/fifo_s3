{cover_enabled, true}.
{edoc_opts, [{dir, "doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{lib_dirs, ["deps"]}.
{erl_opts, [{parse_transform, lager_transform}, debug_info, warnings_as_errors]}.
{deps,
 [
  {lager, ".*", {git, "https://github.com/basho/lager.git", {tag, "2.0.3"}}},
  {poolboy, ".*", {git, "https://github.com/devinus/poolboy.git", {tag, "1.0.1"}}},
  {base16, ".*", {git, "https://github.com/goj/base16.git", {branch, "master"}}},
  {erlcloud, ".*", {git, "https://github.com/project-fifo/erlcloud", {tag, "0.8.2"}}}
 ]}.

{escript_incl_apps, [erlcloud, goldrush, jsx, lager, poolboy, base16]}.
{escript_emu_args, "%%! +K true +P 10000 -env ERL_MAX_PORTS 10000\n"}.
