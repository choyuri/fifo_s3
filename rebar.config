{cover_enabled, true}.
{edoc_opts, [{dir, "doc"}]}.
{eunit_opts, [{report, {eunit_surefire, [{dir,"."}]}}]}.
{erl_opts, [{parse_transform, lager_transform}, debug_info, warnings_as_errors]}.
{deps,
 [
  {lager, "2.1.1"},
  {poolboy, "1.5.1"},
  {base16, ".*", {git, "https://github.com/goj/base16.git", {tag, "1.0"}}},
  {erlcloud, ".*", {git, "https://github.com/project-fifo/erlcloud", {tag, "0.8.6"}}}
 ]}.

{escript_incl_apps, [erlcloud, goldrush, jsx, lager, poolboy, base16]}.
{escript_emu_args, "%%! +K true +P 10000 -env ERL_MAX_PORTS 10000\n"}.
