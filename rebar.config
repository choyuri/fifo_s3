{cover_enabled, true}.
{edoc_opts, [{dir, "doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{lib_dirs, ["deps"]}.
{erl_opts, [{parse_transform, lager_transform}, debug_info, warnings_as_errors]}.
{deps,
 [
  {lager, ".*", {git, "git://github.com/basho/lager.git", {tag, "2.0.3"}}},
  {pooler, ".*", {git, "https://github.com/seth/pooler.git", {tag, "1.1.0"}}},
  {base16, ".*", {git, "https://github.com/goj/base16.git", {branch, "master"}}},
  {erlcloud, ".*", {git, "git://github.com/project-fifo/erlcloud", {branch, "fifo"}}}
 ]}.

{escript_incl_apps, [erlcloud, goldrush, jsx, lager, pooler, base16]}.
{escript_emu_args, "%%! +K true +P 10000 -env ERL_MAX_PORTS 10000\n"}.
